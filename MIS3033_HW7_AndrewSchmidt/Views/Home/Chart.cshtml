    <div style="display:flex;flex-direction:row;">
        <div style="height:400px;">
            <canvas id="c1"></canvas>
        </div>

        <div style="height:400px;">
            <canvas id="c2"></canvas>
        </div>

        <div style="height:400px;">
            <canvas id="c3"></canvas>
        </div>
    </div>

    <script>
        "use strict";
        var rootPath = '@Url.Content("~/")';
    </script>

    <script>
        "use strict";
        var g;
        var c1=null;
        var c2=null;
        var c3=null;
        {
    async function ShowChart() 
    {
        if (c1!=null)
        {
            c1.destroy();
        } if (c2!=null)
        {
            c2.destroy();
        } if (c3!=null)
        {
            c3.destroy();
        }
                let r = await fetch(rootPath + "home/GetChartData", { method: "post", cache: "no-store", });
        let rj = await r.json();
        let chart;
        let params;
        //pie 
        chart = document.querySelector("#c1");
        chart.innerHTML = "";
        params =
        {
            type: "pie",
            data: {
                labels: rj.map(x => x.level),
                datasets: [
                    {
                        label: `Summation of subtotals`,
                        data: rj.map(x => x.sum),
                    },
                ],
            }
        };
        c1 = new Chart(chart, params); 
        
        chart = document.querySelector("#c2");
        chart.innerHTML = "";
        params =
        {
            type: "bar",
            data: {
                labels: rj.map(x => x.level),
                datasets: [
                    {
                        label: `Summation of subtotals`,
                        data: rj.map(x => x.sum),
                    },
                ],
            }
        };
        c2 = new Chart(chart, params); 
        
        
        chart = document.querySelector("#c3");
        chart.innerHTML = "";
        params =
        {
            type: "line",
            data: {
                labels: rj.map(x => x.level),
                datasets: [
                    {
                        label: `Summation of subtotals`,
                        data: rj.map(x => x.sum),
                    },
                ],
            }
        };
        c3 = new Chart(chart, params);


        /////
    }// end of show chart
            ShowChart();

        }
